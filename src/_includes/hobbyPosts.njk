<section>
  <h1 class="text-5xl font-black py-8 flex justify-center">Hobby projects</h1>
{% for project in collections.hobby %}
{% if project.data.published %}
<a href="{{ project.url }}">
<div class="p-8 my-8 rounded-lg transform hover:-translate-y-4 shadow-md glass-bg border-transparent border-2 hover:shadow-2xl dark:bg-gray-900">
  <p>
    <span class="text-2xl sm:text-4xl font-bold leading-tight">{{ project.data.title }}</span>
  </p>
  <article class="mt-4 prose prose-custom dark:prose prose-custom-invert">{{project.data.description | safe}}</article>
  
  <div class="flex justify-between items-center mt-4">
    <div class="flex-1">
      {% for tag in project.data.tags %}
          <div class="post-tag project-tag text-dark">{{ tag }}</div>
      {% endfor %}
    </div>
  </div>

</div>
</a>
{% endif %}
{% endfor %}
</section>